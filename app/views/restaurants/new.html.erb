h2>Create A New Task</h2>

<%= form_with model: @restaurant do |f| %>

  <div class="card" style="width: 18rem">
   <div class="card-body">
    <div class="mb-3">

      <%= f.label "Title:" , { class: "form-label"} %>
      <%= f.text_field :name, { class: "form-control", placeholder: "New Title" }%>
    </div>

    <div class="mb-3">
     <%= f.label "Details:", { class: "form-label"} %>
      <%= f.text_field :address, { class: "form-control", placeholder: "New Details" } %>
    </div>

    <div class="mb-3">
     <%= f.label "Details:", { class: "form-label"} %>
      <%= f.text_field :category, { class: "form-control", placeholder: "New Details" } %>
    </div>

      <%= f.submit "Create!", class: "btn btn-primary"%>
  <% end %>
</div>
</div>
